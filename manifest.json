{
  "manifest_version": 3,
  "name": "Webguard",
  "version": "1.2",
  "description": "Intercepts navigation, scans with VirusTotal, and blocks malicious sites.",
  "permissions": ["tabs", "scripting", "webNavigation", "storage", "alarms"],
  "host_permissions": ["<all_urls>", "https://www.virustotal.com/api/v3/*"],
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ]
}
